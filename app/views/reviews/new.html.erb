<h1>Add Review to restaurant <%= @restaurant.name %></h1>

<div class="position-relative">
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, collection: Review::RATING %>
    <%= f.button :submit, 'Add This Review!', class: 'btn btn-outline-success' %>
  <% end %>
  <%= link_to 'Go Home!', restaurants_path, class: 'btn btn-outline-primary btn-lateral-3'  %>
</div>
