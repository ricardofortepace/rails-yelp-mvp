<h1>Restaurants</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Category</th>
      <th>Rating</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.category %></td>

        <%total_rate = 0%>
        <%restaurant.reviews.each do |review|%>
        <%total_rate += review.rating%>
        <%end%>
        <%average_rate = total_rate / restaurant.reviews.count%>

        <td class = "text-center"><strong><%= average_rate %></strong></td>

        <td><%= restaurant.phone_number %></td>
        <td><%= link_to 'Show', restaurant, class: 'btn btn-outline-primary' %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant), class: 'btn btn-outline-warning' %></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you fucking sure?' }, class: 'btn btn-outline-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Restaurant', new_restaurant_path, class: 'btn btn-outline-success' %>
